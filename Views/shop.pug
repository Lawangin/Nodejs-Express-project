extends layouts/main-layout.pug

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card-image
                            img(src="http://www.pngmart.com/files/1/Book-PNG-HD.png", alt="A Book")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many...
                        .card__actions
                            button.btn Add to Cart
        else
            hq No Products
